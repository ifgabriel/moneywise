{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "baseUrl": "src",
    "types": [
      "jest",
      "styled-components-react-native"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      }
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "extends": "expo/tsconfig.base",
}